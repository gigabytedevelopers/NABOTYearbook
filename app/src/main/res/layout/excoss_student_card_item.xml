<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/excoss_student_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/excoss_student_image"
            android:layout_width="@dimen/excoss_width"
            android:layout_height="@dimen/excoss_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/nav_student"
            android:src="@drawable/user_male"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/padding_med">
                <TextView
                    android:id="@+id/excoss_student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_name"
                    android:textSize="@dimen/text_size_medium"
                    android:singleLine="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/excoss_student_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_quotes"
                    android:layout_below="@id/excoss_student_name"
                    android:textSize="@dimen/text_size_small"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/margin_med"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_med"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/excoss_student_facebook"
                        android:layout_width="@dimen/image_social_dimen"
                        android:layout_height="@dimen/image_social_dimen"
                        android:src="@drawable/ic_fb"
                        android:foreground="?attr/selectableItemBackground"
                        android:textColor="@color/blue"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:id="@+id/excoss_student_instagram"
                        android:layout_width="@dimen/image_social_dimen"
                        android:layout_height="@dimen/image_social_dimen"
                        android:src="@drawable/ic_instagram"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="@dimen/margin_med"
                        android:textColor="@color/light_blue"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:id="@+id/excoss_student_phone"
                        android:layout_width="@dimen/image_social_dimen"
                        android:layout_height="@dimen/image_social_dimen"
                        android:src="@drawable/ic_phone"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="@dimen/margin_med"
                        android:textColor="@color/light_blue"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>