<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AboutFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_med"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_nabot_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo_nabot"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/padding_small"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nabot"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nabot_description"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nabot_facebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fb"
                                android:textAllCaps="true"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                android:padding="@dimen/padding_med"
                                android:textColor="@color/blue"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:id="@+id/nabot_tw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tw"
                                android:textAllCaps="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold"
                                android:padding="@dimen/padding_med"
                                android:layout_marginStart="@dimen/margin_small"
                                android:textColor="@color/light_blue"
                                android:layout_gravity="center_horizontal"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/profile_image_size_about"
                    android:layout_height="@dimen/profile_image_size_about"
                    android:id="@+id/logo_nabot"
                    android:contentDescription="@string/nabot"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/coc_logo"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_feedback_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:cardUseCompatPadding="true"
                android:layout_gravity="bottom"
                app:contentPadding="@dimen/padding_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_about"
                        android:layout_height="@dimen/icon_about"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/gig"
                        android:padding="@dimen/padding_small"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_feedback_black_24dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/margin_med"
                            android:layout_centerVertical="true"
                            android:text="@string/feedback"
                            android:textSize="@dimen/text_size_large" />

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_coder_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:cardUseCompatPadding="true"
                android:layout_gravity="bottom"
                app:contentPadding="@dimen/padding_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/imageview_about"
                        android:layout_height="@dimen/imageview_about"
                        android:src="@drawable/gd"
                        android:contentDescription="@string/gig"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gig"
                            android:textSize="@dimen/text_size_medium"
                            android:layout_gravity="center_horizontal"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/gig_facebook"
                                android:layout_width="@dimen/about_social_dimen"
                                android:layout_height="@dimen/about_social_dimen"
                                android:contentDescription="@string/fb"
                                android:src="@drawable/ic_facebook"
                                android:padding="@dimen/padding_small"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_gravity="center_horizontal"/>
                            <ImageView
                                android:id="@+id/gig_twitter"
                                android:layout_width="@dimen/about_social_dimen"
                                android:layout_height="@dimen/about_social_dimen"
                                android:contentDescription="@string/tw"
                                android:src="@drawable/ic_twitter"
                                android:padding="@dimen/padding_small"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginStart="@dimen/margin_small"
                                android:textColor="@color/light_blue"
                                android:layout_gravity="center_horizontal"/>
                            <ImageView
                                android:id="@+id/gig_instagram"
                                android:layout_width="@dimen/about_social_dimen"
                                android:layout_height="@dimen/about_social_dimen"
                                android:contentDescription="@string/wb"
                                android:src="@drawable/ic_insta"
                                android:padding="@dimen/padding_small"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginStart="@dimen/margin_small"
                                android:textColor="@color/light_blue"
                                android:layout_gravity="center_horizontal"/>
                            <ImageView
                                android:id="@+id/gig_linkedin"
                                android:layout_width="@dimen/about_social_dimen"
                                android:layout_height="@dimen/about_social_dimen"
                                android:contentDescription="@string/wb"
                                android:src="@drawable/ic_linkedin"
                                android:padding="@dimen/padding_small"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginStart="@dimen/margin_small"
                                android:textColor="@color/light_blue"
                                android:layout_gravity="center_horizontal"/>
                            <ImageView
                                android:id="@+id/gig_web"
                                android:layout_width="@dimen/about_social_dimen"
                                android:layout_height="@dimen/about_social_dimen"
                                android:src="@drawable/ic_web"
                                android:contentDescription="@string/wb"
                                android:padding="@dimen/padding_small"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginStart="@dimen/margin_small"
                                android:textColor="@color/dark_purple"
                                android:layout_gravity="center_horizontal"/>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>