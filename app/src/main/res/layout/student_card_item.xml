<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/student_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/student_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_card_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/nav_student"
            android:src="@drawable/user_male"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_med">
            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_name"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/student_reg_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_reg_no"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/student_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_quotes"
                android:textSize="@dimen/text_size_small"
                android:singleLine="true"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/student_facebook"
                    android:layout_width="@dimen/image_social_dimen"
                    android:layout_height="@dimen/image_social_dimen"
                    android:src="@drawable/ic_fb"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/student_instagram"
                    android:layout_width="@dimen/image_social_dimen"
                    android:layout_height="@dimen/image_social_dimen"
                    android:src="@drawable/ic_instagram"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginStart="@dimen/margin_med"
                    android:textColor="@color/light_blue"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/student_phone"
                    android:layout_width="@dimen/image_social_dimen"
                    android:layout_height="@dimen/image_social_dimen"
                    android:src="@drawable/ic_phone"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginStart="@dimen/margin_med"
                    android:textColor="@color/light_blue"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>